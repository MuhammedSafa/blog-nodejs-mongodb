<%- include('partials/header'); %>

    <% if (name !=="" ) {%>
        <h1>
            <%= name %> Blog
        </h1>
        <%}%>
            <h2>Home</h2>
            <p>
                <%= homeText %>
            </p>

            <% for (let i=0; i < posts.length; i++) { %>

                <h2>
                    <%= posts[i].name %>
                </h2>

                <p>
                    <%= posts[i].content.substring(0, 100) + " ..." %><a
                            href="/post/<%= posts[i].id %>">Read more</a>
                </p>

                <% } %>

                    <%- include('partials/footer'); %>